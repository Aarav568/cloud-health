<%- include("partials/sideNav.ejs") %>

<%console.log(appointments)%>

<div class="content" style="padding: 40px">
    <div style="width:100%; text-align: center;">
      <h1 style="margin-bottom: 15px; padding-bottom: 10px">Your Appointment</h1>
      <div class="columns">
        <div class="column table-header">
          <h3>Doctor</h3>
        </div>
        <div class="column table-header">
          <h3>Name</h3>
        </div>
        <div class="column table-header">
          <h3>Time & Subject</h3>
        </div>
        <div class="column table-header">
            <h3>Address</h3>
        </div>
      </div>
      <%appointments.forEach(e => {%> 
        <form action="/appointment" method="post">
        <div class="columns">
            <div class="column">
              AVATAR
            </div>
            <div class="column">
              <%=e.doctor%>
            </div>
            <div class="column">
              <%=e.time%>
              <br>
              "<%=e.subject%>"
            </div>
            <div class="column">
                <%=e.address%>
              <!-- <input type="text" name="doctorName" hidden value="<%=e._id%>">
              <button class="button is-primary">Choose</button> -->
            </div>
          </div>
        </form>
        <%})%>
    </div>
</div>